// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - supports both OAuth and email/password auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?   // Null for OAuth users
  avatar        String?
  role          String    @default("student") // 'teacher' or 'student'
  
  // OAuth fields
  provider      String?   // 'github', 'google', or 'email'
  providerId    String?   // ID from OAuth provider
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  sessionsOwned Session[] @relation("SessionOwner")
  sessionsJoined SessionParticipant[]
  chatMessages  ChatMessage[]
  filesCreated  SessionFile[] @relation("FilesCreated")
  
  @@unique([provider, providerId])
}

// Coding session model
model Session {
  id          String    @id @default(cuid())
  code        String    @unique // Session code like "ABC-123"
  title       String
  description String?
  isActive    Boolean   @default(true)
  
  // Owner (teacher)
  ownerId     String
  owner       User      @relation("SessionOwner", fields: [ownerId], references: [id])
  
  // Participants
  participants SessionParticipant[]
  
  // Files in session
  files       SessionFile[]
  
  // Chat messages
  messages    ChatMessage[]
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Session participants (students who joined)
model SessionParticipant {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())
  
  @@unique([sessionId, userId])
}

// Files stored in a session
model SessionFile {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  name      String   // File name
  path      String   // Full path like "src/components/Button.jsx"
  content   String   @default("") // File content
  language  String?  // Language hint (javascript, css, etc)
  
  // For folder structure
  isFolder  Boolean  @default(false)
  parentPath String? // Parent folder path
  
  // Ownership tracking
  createdById String?  // Who created the file
  createdBy   User?    @relation("FilesCreated", fields: [createdById], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([sessionId, path])
}

// Chat messages in a session
model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  
  content   String
  timestamp DateTime @default(now())
}

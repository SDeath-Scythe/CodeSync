// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - supports both OAuth and email/password auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?   // Null for OAuth users
  avatar        String?
  role          String    @default("student") // 'teacher' or 'student'
  
  // OAuth fields
  provider      String?   // 'github', 'google', or 'email'
  providerId    String?   // ID from OAuth provider
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  sessionsOwned Session[] @relation("SessionOwner")
  sessionsJoined SessionParticipant[]
  chatMessages  ChatMessage[]
  workspaces    SessionWorkspace[] @relation("WorkspaceOwner")
  
  @@unique([provider, providerId])
}

// Coding session model
model Session {
  id          String    @id @default(cuid())
  code        String    @unique // Session code like "ABC-123"
  title       String
  description String?
  isActive    Boolean   @default(true)
  
  // Owner (teacher)
  ownerId     String
  owner       User      @relation("SessionOwner", fields: [ownerId], references: [id])
  
  // Participants
  participants SessionParticipant[]
  
  // User workspaces (file trees stored as JSON)
  workspaces  SessionWorkspace[]
  
  // Chat messages
  messages    ChatMessage[]
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Session participants (students who joined)
model SessionParticipant {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())
  
  @@unique([sessionId, userId])
}

// User's file workspace stored as a single JSON record per session
// One record per user-session combination - saves the entire folder structure as JSON
model SessionWorkspace {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  // The entire file structure stored as JSON
  // Format: { fileTree: [...], fileContents: { fileId: content, ... } }
  data      Json     // Contains both structure and contents
  
  // Ownership tracking
  createdById   String   // User ID who owns this workspace
  createdBy     User     @relation("WorkspaceOwner", fields: [createdById], references: [id])
  createdByName String   // User's display name (cached for easy display)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Each user has exactly ONE workspace record per session
  @@unique([sessionId, createdById])
}

// Chat messages in a session
model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  
  content   String
  timestamp DateTime @default(now())
}
